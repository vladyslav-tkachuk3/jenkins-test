#! groovy

properties([disableConcurrentBuilds()])

pipeline {
  agent {
    label 'buildin'
  }
  environment {
    IMAGE_REPO = 'vladyslavtkachuk3'
  }
  stages {
    stage('delete workspace before build starts') {
      steps {
        echo 'deleting workspace'
        deleteDir()
      }
    }
    stage('checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/vladyslav-tkachuk3/jenkins-test.git'
      }
    }
    stage('build docker image') {
      steps {
        dir('ci-pipeline/docker') {
          sh 'docker system prune -a --volumes'
          sh 'docker build -t ${IMAGE_REPO}/alpine:latest .'
          sh 'docker images'
        }
      }
    }
    stage('tag docker image') {
      steps {
        sh 'docker tag ${IMAGE_REPO}/alpine:latest ${IMAGE_REPO}/alpine:latest'
      }
    }
    stage('push docker image to dockerhub') {
      steps {
        withDockerRegistry(credentialsId: 'dockerhub-credentials', url: 'https://index.docker.io/v1/') {
          sh 'docker push ${IMAGE_REPO}/alpine:latest'
        }
      }
    }
  }
}
