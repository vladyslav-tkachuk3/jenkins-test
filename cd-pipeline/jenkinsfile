pipeline {
  agent {
    label "${params.deploy_environment}"
  }
  environment {
    IMAGE_REPO = 'vladyslavtkachuk3'
    IMAGE_NAME = 'ubuntu'
  }
  parameters {
    choice choices: ['buildin', 'dev', 'qa'], name: 'deploy_environment'
    choice choices: ['85', '84', '83', '82'], name: 'version'
  }
  stages {
    stage('deploy') {
      steps {
        sh "docker pull ${env.IMAGE_REPO}/${env.IMAGE_NAME}:${params.version}"
        sh "docker images"
        sh "docker run --name myimage -d -p 80:80 ubuntu:latest"
      }
    }
    stage('clean') {
      steps {
        sh 'docker stop $(docker ps -a -q)'
        sh 'docker rm $(docker ps -a -q)'
      }
    }
  }
}
